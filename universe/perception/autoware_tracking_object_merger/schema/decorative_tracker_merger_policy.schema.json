{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parameters for Decorative Tracker Merger Policy",
  "type": "object",
  "definitions": {
    "merger_policy": {
      "type": "string",
      "enum": ["skip", "overwrite", "fusion"],
      "description": "Merger policy options: skip, overwrite, or fusion"
    },
    "decorative_tracker_merger_policy": {
      "type": "object",
      "properties": {
        "kinematics_to_be_merged": {
          "type": "string",
          "description": "Kinematics property to be merged (currently only supports velocity)",
          "enum": ["velocity"],
          "default": "velocity"
        },
        "kinematics_merge_policy": {
          "$ref": "#/definitions/merger_policy",
          "description": "Merger policy for kinematics (velocity)",
          "default": "overwrite"
        },
        "classification_merge_policy": {
          "$ref": "#/definitions/merger_policy",
          "description": "Merger policy for classification",
          "default": "skip"
        },
        "existence_prob_merge_policy": {
          "$ref": "#/definitions/merger_policy",
          "description": "Merger policy for existence probability",
          "default": "skip"
        },
        "shape_merge_policy": {
          "$ref": "#/definitions/merger_policy",
          "description": "Merger policy for shape",
          "default": "skip"
        }
      },
      "required": [
        "kinematics_to_be_merged",
        "kinematics_merge_policy",
        "classification_merge_policy",
        "existence_prob_merge_policy",
        "shape_merge_policy"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "/**": {
      "type": "object",
      "properties": {
        "ros__parameters": {
          "$ref": "#/definitions/decorative_tracker_merger_policy"
        }
      },
      "required": ["ros__parameters"],
      "additionalProperties": false
    }
  },
  "required": ["/**"],
  "additionalProperties": false
}
